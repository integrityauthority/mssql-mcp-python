# =============================================================================
# MSSQL MCP Server - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment.
# NEVER commit .env with real credentials to version control.

# -----------------------------------------------------------------------------
# Database Connection (REQUIRED)
# -----------------------------------------------------------------------------
MSSQL_CONNECTION_STRING=Driver={ODBC Driver 18 for SQL Server};Server=localhost,1433;Database=master;UID=sa;PWD=YourPassword123

# Connection settings
MSSQL_CONNECTION_TIMEOUT=30
MSSQL_QUERY_TIMEOUT=30
MSSQL_MAX_POOL_SIZE=10

# -----------------------------------------------------------------------------
# Network / DNS Rebinding Protection
# -----------------------------------------------------------------------------
# Set this to your server's hostname for external access (without port)
ALLOWED_HOST=

# -----------------------------------------------------------------------------
# Security & Safety
# -----------------------------------------------------------------------------
READ_ONLY=true
ENABLE_WRITES=false
# ADMIN_CONFIRM=your-secret-token  # Required if ENABLE_WRITES=true

MAX_ROWS_PER_QUERY=50000
MAX_QUERY_LENGTH=50000

# -----------------------------------------------------------------------------
# Logging & Observability
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=true
ENABLE_PROMETHEUS=true
# SENTRY_DSN=https://xxx@sentry.io/xxx

# -----------------------------------------------------------------------------
# Rate Limiting (optional)
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=false
RATE_LIMIT_QUERIES_PER_MINUTE=1000
